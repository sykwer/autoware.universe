<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="input_topic" default="imu_raw"/>
  <arg name="output_topic" default="imu_data"/>
  <arg name="param_file" default="$(find-pkg-share imu_corrector)/config/imu_corrector.param.yaml"/>

  <node_container pkg="rclcpp_component_container_callback_isolated" exec="component_container_callback_isolated" name="imu_corrector_container" namespace="">
    <composable_node pkg="imu_corrector" plugin="imu_corrector::ImuCorrector" name="imu_corrector" namespace="">
      <remap from="input" to="$(var input_topic)"/>
      <remap from="output" to="$(var output_topic)"/>
      <param from="$(var param_file)"/>
    </composable_node>
  </node_container>
</launch>
